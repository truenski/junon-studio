{
  "manifest_version": 3,
  "name": "Junon Command Blocks Automation",
  "version": "1.0.0",
  "description": "Automate the creation of Junon.io command blocks from JSON configuration",
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://junon.io/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Junon Automation"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://junon.io/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
