{
  "manifest_version": 3,
  "name": "Junon Command Blocks to JSON Import/Export",
  "version": "1.0.0",
  "description": "Add new commands and export to JSON format Junon.io command blocks. ",
  "permissions": [
    "scripting",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://junon.io/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Junon Automation",
    "default_icon": "icons/icon48.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://junon.io/*"],
      "js": ["junon_automation.js", "content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["junon_automation.js"],
      "matches": ["https://junon.io/*"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
