---
interface Props {
  categories: Array<{ id: string; name: string; count: number }>;
}

const { categories } = Astro.props;
---

<div class="mb-6 border border-white/10 rounded p-4">
  <div class="flex items-center gap-2 mb-4">
    <svg
      class="w-5 h-5 text-white/70"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"
      />
    </svg>
    <span class="text-sm font-bold text-white/70">Filters</span>
  </div>
  <div class="flex flex-wrap gap-4">
    {categories.map((category) => (
      <label class="flex items-center gap-2 cursor-pointer group">
        <input
          type="checkbox"
          class="filter-checkbox w-4 h-4 bg-white/5 border border-white/10 rounded focus:ring-2 focus:ring-white/20 text-white cursor-pointer"
          data-category={category.id}
          checked
        />
        <span class="text-sm text-white/80 group-hover:text-white transition-colors">
          {category.name} ({category.count})
        </span>
      </label>
    ))}
  </div>
  
  <style>
    .filter-checkbox {
      appearance: none;
      -webkit-appearance: none;
      position: relative;
    }
    
    .filter-checkbox:checked {
      background-color: white;
    }
    
    .filter-checkbox:checked::after {
      content: "âœ“";
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      color: black;
      font-size: 12px;
      font-weight: bold;
    }
    
    .filter-checkbox:hover {
      border-color: white/30;
    }
  </style>
</div>

