---
import Layout from "@/layouts/Layout.astro";
---

<Layout title="JUNON Code - Not Found" currentPage="editor">
  <div class="flex items-center justify-center h-full">
    <div class="text-center">
      <h1 class="text-4xl font-display text-primary neon-glow mb-4">404</h1>
      <p class="text-muted-foreground mb-6">Page not found</p>
      <a
        href="/"
        class="px-4 py-2 rounded-lg bg-primary/10 text-primary neon-border hover:bg-primary/20 transition-colors"
      >
        Go to Editor
      </a>
    </div>
  </div>
</Layout>

